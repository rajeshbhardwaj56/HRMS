<body class="login-bg">
	<div class="container" id="container">
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-right">
					<a class="app-brand-link gap-2">
						<span class="app-brand-logo demo">
							@if (Model != null)
							{
								if (Model.CompanyLogo != null)
								{
									<img src="@Model.CompanyLogo" />
								}
								else
								{
									<img src="~/assets/img/logo/PROTALKLOGO.png" />
								}
							}
							else
							{
								<img src="~/assets/img/logo/PROTALKLOGO.png" />
							}
						</span>
					</a>
					<h1>
						Welcome to <br />
						<span>Protalk HRMS!</span>
					</h1>
				</div>
			</div>
		</div>

		<div class="form-container sign-in-container">
			@using (Html.BeginForm("ForgotPassword", "home", FormMethod.Post, new { @id = "ForgotPasswordForm", @onsubmit = "showLoader(this);", autocomplete = "off" }))
			{
				<form action="" method="post" class="mb-3">
					@Html.HiddenFor(x => x.CompanyLogo)
					<h3 class="mb-4">Forgot Password?</h3>
					@Html.TextBoxFor(a => a.EmailId, new { @class = "form-control", @placeholder = "Enter Your UserName", required = "required" })
					<button class="btn d-grid w-100 mt-4 submitBtn" type="submit">Change Password</button>
					<a href="@Url.Action("index", "home")">Back To Login</a>
				</form>

			}
		</div>

	</div>





