@model HRMS.Models.Common.ChangePasswordModel
@{
    Layout = null;
    var error = ViewBag.Error;
    var success = ViewBag.Success;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <title>Truck CRM- Login</title>
    <link href="@Url.Content("~/assets/css/font-awesome.min.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/bootstrap.min.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/theme.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/custom.css")" rel="stylesheet" media="all">
    <link href="@Url.Content("~/assets/css/jquery.notifyBar.css")" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRMS.Web.styles.css" asp-append-version="true" />
    <link href="~/assets/css/theme.css" rel="stylesheet" />
    <style>
        .login-bg {
            background-image: url(../assets/img/bg.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .submitBtn {
            border: 1px solid var(--body-bg);
            background-color: var(--body-bg);
            color: var(--white-text-color);
            font-size: 12px;
            font-weight: bold;
            padding: 5px 40px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 80ms ease-in;
        }
        </style>
</head>

<body class="login_bg">
    <div class="page-content">
        <div class="container login_container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="@Url.Content("~/assets/img/logo/logo-large.png")" style="height:80px" alt="Logo">
                        </a>
                    </div>
                    @using (Html.BeginForm("ForgotPassword", "home", FormMethod.Post, new { @id = "ForgotPasswordForm", @onsubmit = "showLoader(this);", autocomplete = "off" }))
                    {



                        <div class="login-form">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label>Email Address</label>
                                 
                                    @Html.TextBoxFor(a => a.EmailId, "", new { @class = "el-input el-input--full", @placeholder = "Username" })
                                    @Html.ValidationMessageFor(m => m.EmailId)
                                </div>                      
                              
                               

                                <button class="el-btn login_btn m-b-20 submitBtn" type="submit">Change Password</button>
                                <a href="@Url.Action("index", "home")">Back To Login</a>
                            </form>
                        </div>





                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/assets/js/jquery-3.2.1.min.js"></script>
    @Html.Partial("_Toast")
</body>

</html>