@using HRMS.Models;
@model HolidayModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Holiday";
}
<form method="post" id="submitForm" enctype="multipart/form-data">
    <div class="Container">

        <div class="col-md-12 container-heading" >
            <label class="form-label" style="font-weight:500;">Holiday Details </label>
        </div>
        <div class="row">
            <div class="row">
                <div class="col-md-6 my-2">
                    <div class="col-md-12">
                        <label class="form-label">Holiday Name <span class="Mandetory">*</span> </label>
                    </div>
                    <div class="col-md-12">
                        @Html.HiddenFor(x => x.HolidayID)
                        @Html.TextBoxFor(a => a.HolidayName, new { @class = "form-control", @required = "required" })

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 my-2">
                    <div class="col-md-12">
                        <label class="form-label"> Holiday From Date <span class="Mandetory">*</span> </label>
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(a => a.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @required = "required" })
                    </div>
                </div>
                <div class="col-md-4 my-2">
                    <div class="col-md-12">
                        <label class="form-label"> Holiday To Date <span class="Mandetory">*</span> </label>
                    </div>
                    <div class="col-md-12">
                        @Html.TextBoxFor(a => a.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @required = "required" })
                    </div>
                </div>
                <div class="col-md-4 my-2">
                    <div class="col-md-12">
                        <label class="form-label"> Status <span class="Mandetory">*</span> </label>
                    </div>
                    <div class="col-md-12">
                        @Html.CheckBoxFor(a => a.Status, new { @required = "required" })
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 my-2">
                    <div class="col-md-12">
                        <label class="form-label"> Description <span class="Mandetory">*</span> </label>
                    </div>
                    <div class="col-md-12">
                        @Html.TextAreaFor(a => a.Description, new { @class = "form-control", @required = "required", @rows = "4" })
                    </div>
                </div>

            </div>
            


            <div class="row">
                <div class="col-md-12 my-2">
                    <input style="float:right" id="submitBtn" type="submit" value="Submit" class="btn btn-success" />
                    <input id="cancelButton" style="float:right;margin-right: 10px;" type="button" value="Cancel" class="btn btn-success" />
                </div>

            </div>

        </div>
    </div>
</form>

<script>

    document.getElementById('cancelButton').addEventListener('click', function () {
        window.location.href = '@Url.Action("HolidayListing", "Holiday")';
    });
</script>
