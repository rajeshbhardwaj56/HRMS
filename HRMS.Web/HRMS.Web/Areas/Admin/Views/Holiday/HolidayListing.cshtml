@using HRMS.Models.Common;

<link href="~/assets/pages/gridlist.css" rel="stylesheet" />

@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Holiday";

	var success = TempData["Success"];
	var Err = TempData["Error"];
}

<div class="main-header anim" style="--delay: 0s">Holiday List
	<div class="col-md-3 col-sm-6 mb-2 mb-md-0">
		<div class="d-flex align-items-center">
			<label for="locationDropdown" class="mr-2 mb-0" style="font-size: 12px; white-space: nowrap;">Select Location: </label>
			<select id="locationDropdown" class="form-control form-control-sm">
				<option value="">All Locations</option>				
			</select>
		</div>
	</div>
	<a href="~/Admin/Holiday">
	<button type="button" class="btn btn-addBtn" id="openFormBtn">Add Holiday</button></a>
	
</div>
