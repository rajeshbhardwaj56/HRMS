<div class="table-responsive py-3">
	
	<table id="tblHolidayListing" class="table table-striped body-text" style="width:100%">
		<thead>
			
			<tr>
				<th class="first" style="visibility:hidden"> /th>
				<th>Holiday Name</th>
				<th>From Date</th>
				<th>To Date</th>
				<th>Description</th>
				<th>Location</th>
				<th>Status</th>	
				<th>Action</th>
			</tr>
		</thead>

	</table>
</div>



<script type="text/javascript">
		$('#locationDropdown').change(function () {
		$('#tblHolidayListing').DataTable().ajax.reload();
	});
	$(document).ready(function () {
		$('#tblHolidayListing').DataTable({
			"ajax": {
				"url": "HolidayListings/",
				"type": "POST",
				"datatype" :"json",
				 "data": function (d) {
				
				d.locationId = $('#locationDropdown').val();
			},
			"dataSrc": function (json) {
				var dropdown = $('#locationDropdown');
				 var selectedVal = dropdown.val();
				dropdown.empty();
				dropdown.append('<option value="">All Locations</option>');

				if (json.locations && json.locations.length) {
					$.each(json.locations, function (index, location) {
						dropdown.append(
							$('<option></option>').val(location.jobLocationID).text(location.jobLocationName)
						);
					});
				}
				dropdown.val(selectedVal);

				return json.data;
			}
			},
			"ordering": true,
			"paging": true,
			"searching": true,
			"info": true,
			"columns": [
				{ "data": "holidayID", "autoWidth": true, },
				{ "data": "holidayName", "autoWidth": true, },
				{
					"data": "fromDate", "autoWidth": true, "render": function (data, type, row) {
						var dateObj = new Date(data);
						var formattedDate = dateObj.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }); // Change the format as per your requirement
						return formattedDate;
					}
				},
				{
					"data": "toDate", "autoWidth": true, "render": function (data, type, row) {
						var dateObj = new Date(data);
						var formattedDate = dateObj.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }); // Change the format as per your requirement
						return formattedDate;
					}
				},
				{ "data": "description", "autoWidth": true },
				{ "data": "location", "autoWidth": true },
				{  "data": "status",
	"autoWidth": true,
	"render": function (data, type, row) {
		return data === true || data === "true" ? "Active" : "Inactive";
	} },

				{
					// this is Actions Column
					mRender: function (data, type, row) {
						var linkEdit = '<div class="table-data-feature"><a data-toggle="tooltip" data-placement="top"  class="item" href="Index?id=' + row.encodedId + '"  title=""  data-original-title="Edit"><img src="/assets/img/edit.png" width="20" height="20" /></a>';
						return linkEdit;
					}
				},
			],
			"columnDefs": [
				{
					target: 2,
					visible: false,
					searchable: false
				},

				{

					"targets": [0], //first and last not sortable
					"orderable": false,
					"visible": false
				},

				{

					"targets": [1], //first and last not sortable
					"orderable": true,
					"defaultContent": " "
				}

			]
			, "responsive": true

		});

	});
</script>