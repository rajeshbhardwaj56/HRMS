@using HRMS.Models.Common;
<link href="~/assets/pages/gridlist.css" rel="stylesheet" />

@model Results
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Holiday";

    var success = TempData["Success"];
    var Err = TempData["Error"];
}

<div class="addcomp px-4">
    <h4>Holiday List</h4>
    <a href="~/Admin/Holiday"> <button type="button" class="btn btn-addcompany" id="openFormBtn">Add Holiday</button></a>
</div>


<div class="container-fluid">
    <table id="tblHolidayListing" class="table table-striped body-text" style="width:100%">
        <thead>
            <tr>
                <th class="first" style="visibility:hidden"> /th>
                <th>Holiday Name</th>
                <th>Company ID</th>
                <th>Letter Head Name</th>
                <th>Header Image</th>
                <th>Footer Image</th>
                <th>Action</th>
            </tr>
        </thead>

    </table>
</div>



<script type="text/javascript">

    $(document).ready(function () {
        $('#tblHolidayListing').DataTable({
            "ajax": {
                "url": "HolidayListings/",
                "type": "POST",
                "datatype": "json"
            },
            "ordering": true,
            "paging": true,
            "searching": true,
            "info": true,
            "columns": [
                { "data": "HolidayID", "autoWidth": true, },
                { "data": "HolidayName", "autoWidth": true, },
                { "data": "companyID", "autoWidth": true, },
                { "data": "letterHeadName", "autoWidth": true },
                {
                    "data": "headerImage",
                    "render": function (data, type, row) {
                        return '<img src="' + data + '" alt="Header Image" style="width:30px;">';
                    }
                },
                {
                    "data": "footerImage",
                    "render": function (data, type, row) {
                        return '<img src="' + data + '" alt="Footer Image" style="width:30px;">';
                    }
                },


                {
                    // this is Actions Column
                    mRender: function (data, type, row) {
                        var linkEdit = '<div class="table-data-feature"><a data-toggle="tooltip" data-placement="top"  class="item" href="Index?id=' + row.HolidayID + '"  title=""  data-original-title="Edit"><img src="/assets/img/edit.png" width="20" height="20" /></a>';
                        return linkEdit;
                    }
                },
            ],
            "columnDefs": [
                {
                    target: 2,
                    visible: false,
                    searchable: false
                },

                {

                    "targets": [0], //first and last not sortable
                    "orderable": false,
                    "visible": false
                },

                {

                    "targets": [1], //first and last not sortable
                    "orderable": true,
                    "defaultContent": " "
                }

            ]
            , "responsive": true

        });

    });
</script>