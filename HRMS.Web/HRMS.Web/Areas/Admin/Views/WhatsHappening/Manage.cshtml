        <div class="col-md-12">
            <div class="card commonForm">
                <div class="card-header hideMobile">@ViewBag.Title</div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-12">
                            @foreach (var data in Model._WhatsHappenings)
                            {
                                <div class="row RoudedBorder">
                                    <div class="col-md-12">
                                        <h3>
                                            @data.Title 
                                        </h3>
                                        <hr style="width:100%;" />
                                    </div>

                                    <div class="col-md-12">
                                        @Html.Raw(data.Description)
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

