                $('#EducationDetailID').val('');
            }

                        $('#educationGrid').DataTable().ajax.reload();
                         toastMessage('Success', 'Deleted successfully');
                    },
                    error: function () {
                       toastEMessage('Error', 'Failed to delete record');
                    }
                });
            });
        });

         function toastEMessage(type , message){
          $.toast({
                    heading: 'Error',
                    text: message,
                    showHideTransition: 'slide',
                    icon: 'error',
                    position: 'top-right',
                });
        }
        function editEntry(educationDetailId) {
            const table = $('#educationGrid').DataTable();
            const rowData = table.rows().data().toArray().find(r => r.educationDetailID === educationDetailId);

            if (!rowData) return alert('Record not found!');

            $('#EmployeeID').val(rowData.employeeID);
            $('#EducationDetailID').val(rowData.educationDetailID);
            $('#School_University').val(rowData.school_University);
            $('#Qualification').val(rowData.qualification);
            $('#YearOfPassing').val(rowData.yearOfPassing);
            $('#Percentage').val(rowData.percentage);
            $('#Major_OptionalSubjects').val(rowData.major_OptionalSubjects);
            $('#CertificateImage').val(rowData.certificateImage);
            if (rowData.certificateImage?.toLowerCase().includes('.pdf')) {
                $('#existingCertificateLink').attr('href', rowData.certificateImage);
                $('#existingCertificateContainer').show();
                $('#CertificateFileInput').removeAttr('required');
                $('#fileRequiredStar').hide();
            } else {
                $('#existingCertificateContainer').hide();
                $('#CertificateFileInput').attr('required', 'required');
                $('#fileRequiredStar').show();
            }

            $('#CertificateFileInput').val('');
            $('#fileError').hide();
        }
    </script>
}
