                    LanguageDetailID: $("#" + elementID.replace("LanguageID", "EducationDetailID")).val(),
                    IsSpeak: $("#" + elementID.replace("LanguageID", "IsSpeak")).is(":checked"),
                    IsRead: $("#" + elementID.replace("LanguageID", "IsRead")).is(":checked"),
